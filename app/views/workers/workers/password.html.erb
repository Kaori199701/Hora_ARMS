<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-2">
      <%= render 'workers/workerside', worker: @worker %>
    </div>

    <div class="col-lg-10">
      <h2><%= current_worker.last_name %><%= current_worker.first_name %>　パスワード変更</h2>

      <div class="worker_edit">
        <%= form_with model: @worker, url: workers_worker_path(@worker.id), method: :patch do |f| %>

        <div class="worker_edit_link">
        <%= f.submit '編集内容を保存', class:"btn btn-success" %>
        </div>

        <div class="element_edit_field">
          <table>
            <tbody>
              <tr>
                <th width="13%">新しいパスワード ※6文字以上</th>
                <td width="30%"><%= f.password_field :password, :size=>"40" %></td>
              </tr>
              <tr>
                <th>新しいパスワード(確認)</th>
                <td><%= f.password_field :password_confirmation, :size=>"40" %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <% end %>
      </div>
    </div>

    </div>
  </div>
</main>