<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-10">
      <div class="login-box" >
      <h2>従業員ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tr>
            <th width="10%"><%= f.label :社員番号 %></th>
            <td width="40%"><%= f.text_field :employee_number, autofocus: true %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード %></th>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "ログイン" %></td>
          </tr>
        </table>

      <% end %>

      <%= render "workers/shared/links" %>
      </div>
    </div>

    </div>
  </div>
</main>