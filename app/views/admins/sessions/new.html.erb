<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-10">
      <div class="login-box" >
      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table>
          <tr>
            <th width="10%"><%= f.label :メールアドレス %></th>
            <td width="40%"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード %></th>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        </table>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= link_to "パスワード再発行", new_admin_password_path %><br />
      <%= link_to "管理者アカウント追加", new_admin_registration_path %>

      </div>
    </div>

    </div>
  </div>
</main>