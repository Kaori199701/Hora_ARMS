<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-10">
      <div class="login-box" >
      <h2>管理者ログイン</h2>

    <div class="login_contents">
      <div class="succses_message">
        <%= flash[:notice] %>
      </div>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="login_table">
          <tr>
            <th width="8%"><%= f.label :メールアドレス %></th>
            <td width="40%"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード %></th>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        </table>

        <div class="login_bottun"><%= f.submit "ログイン" %></div>
      <% end %>
    </div>

      <管理者パスワード再発行>は<%= link_to "こちら", new_admin_password_path %>

      </div>
    </div>

    </div>
  </div>
</main>