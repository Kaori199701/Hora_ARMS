<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-10">
      <div class="login-box" >
        <h2>管理者アカウント新規登録</h2>

    <div class="login_contents">

        <%= form_with model: @admin, url: admin_registration_path do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
        <table class="login_table">
          <tr>
            <th width="20%"><%= f.label :メールアドレス %></th>
            <td width="40%"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード %> ※<%= @minimum_password_length %>文字以上</th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :"パスワード(確認)"%></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>

          <div class="login_bottun">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        管理者のログインは<%= link_to "こちら", new_admin_session_path %>

      </div>
    </div>

    </div>
  </div>
</main>