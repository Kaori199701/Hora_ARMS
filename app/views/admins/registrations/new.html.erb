<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-10">
      <div class="login-box" >
        <h2>管理者アカウント新規登録</h2>

        <%= form_with model: @admin, url: admin_registration_path do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <th width="10%"><%= f.label :メールアドレス %></th>
            <td width="40%"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード %></th>
            <td>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              ※<%= @minimum_password_length %>文字以上
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :"パスワード(確認)"%></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        <%= link_to "ログイン", new_admin_session_path %>

      </div>
    </div>

    </div>
  </div>
</main>