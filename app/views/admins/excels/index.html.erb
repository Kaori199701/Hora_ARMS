<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-2">
      <%= render 'admins/adminside', admin: @admin %>
    </div>

    <div class="col-lg-10">

<h2>Excel出力</h2>

<%= link_to "Excel出力", admins_excels_path(@workers, format: :xlsx) %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.last_name %></td>
        <td><%= worker.first_name %></td>
        <td><%#= link_to 'Show', excel %></td>
        <td><%#= link_to 'Edit', edit_excel_path(worker) %></td>
        <td><%#= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Excel', new_excel_path %>
      </div>

    </div>
  </div>
