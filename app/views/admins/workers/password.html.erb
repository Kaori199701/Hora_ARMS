<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-2">
    <%= render 'admins/adminside', admin: @admin %>
    </div>

    <div class="col-lg-10">
      <h1><%= @worker.last_name %> <%= @worker.first_name %>　パスワード変更</h1>

      <div class="worker_edit">
        <%= form_with model: @worker, url: admins_worker_path(@worker.id), method: :patch do |f| %>

        <table class="order-table table mb-5">
          <tbody>
            <tr>
              <th>初期パスワード</th>
              <td><%= f.password_field :password, :size=>"40" %></td>
            </tr>
            <tr>
              <th>初期パスワード(確認)</th>
              <td><%= f.password_field :password_confirmation, :size=>"40" %></td>
            </tr>
          </tbody>
        </table>

          <div class="actions">
            <%= f.submit '編集内容を保存', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>

    </div>
  </div>
</main>