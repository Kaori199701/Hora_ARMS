<main>
  <div class="container">
    <div class="row">

    <div class="col-lg-2">
      <%= render 'admins/adminside', admin: @admin %>
    </div>

    <div class="col-lg-10">
      <h2><%= @worker.last_name %> <%= @worker.first_name %>　従業員情報変更</h2>

      <div class="worker_field">
        <%= form_with model: @worker, url: admins_worker_path(@worker.id), method: :patch do |f| %>

        <div class="action">
          <%= f.submit '編集内容を保存', class:"btn btn-sm btn-success" %>
        </div>

        <table class="table mt-3">
          <tbody>
            <tr>
              <th>氏名</th>
              <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
            </tr>
            <tr>
              <th>社員番号</th>
              <td><%= f.text_field :employee_number %>
            </tr>
            <tr>
              <th>所属</th>
              <td><%= f.collection_select :department_id, Department.all, :id, :department_name %></td>
            </tr>
            <tr>
              <th>役職</th>
              <td><%= f.collection_select :director_id, Director.all, :id, :director_name %></td>
            </tr>
            <tr>
              <th>勤務地</th>
              <td><%= f.collection_select :location_id, Location.all, :id, :location_name %></td>
            </tr>
            <tr>
              <th>勤務区分</th>
              <td>
                <%= f.collection_select :working_hour_id, WorkingHour.all, :id, :working_hour_code %>
              </td>
            </tr>
            <tr>
              <th>性別</th>
              <td>
                <%= f.radio_button :sex, :male %>
                <%= f.label :sex, '男性' %>

                <%= f.radio_button :sex, :female %>
                <%= f.label :sex, '女性' %>
              </td>
            </tr>
            <tr>
              <th>生年月日</th>
              <td>
                <%= f.date_field :birthday %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, :size=>"40" %></td>
            </tr>
            <tr>
              <th>勤務状況</th>
              <td>
                <%#= f.select "employment_status",
                    Worker.employment_statuses.map { |k, _| [I18n.t("enums.worker.employment_status.#{k}"), k] },
                    class:"form-control form-control-sm col-6"  %>
                <%= f.radio_button :employment_status, :tenure %>
                <%= f.label :employment_status, '在職' %>

                <%= f.radio_button :employment_status, :retirement %>
                <%= f.label :employment_status, '退職' %>

                <%= f.radio_button :employment_status, :leave_from_work %>
                <%= f.label :employment_status, '休職' %>
              </td>
            </tr>
            <tr>
              <th>入社日</th>
              <td>
                <%= f.date_field :hire_date %>
              </td>
            </tr>
            <tr>
              <th>退社日</th>
              <td>
                <%= f.date_field :retirement_date %>
              </td>
            </tr>
            <tr>
              <th>休職期間</th>
              <td>
                <%= f.date_field :start_career_break %>～<%= f.date_field :finish_career_break %>
              </td>
            </tr>
          </tbody>
        </table>

        <% end %>
      </div>
    </div>

    </div>
  </div>
</main>